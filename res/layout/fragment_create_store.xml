<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/GridLayout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:columnCount="3"
    android:orientation="vertical"
    android:stretchMode="columnWidth" >

    <TextView
        android:layout_column="0"
        android:layout_row="0"
        android:text="@string/name_label" />

    <EditText
        android:id="@+id/name_editText"
        android:layout_width="wrap_content"
        android:layout_column="1"
        android:layout_gravity="fill_horizontal"
        android:layout_row="0"
        android:hint="@string/store_name_hint"
        android:inputType="text"
        android:lines="1"
        android:maxLength="100" />

    <TextView
        android:layout_column="0"
        android:layout_row="1"
        android:text="@string/street_label_editText" />

    <EditText
        android:id="@+id/street_editText"
        android:layout_column="1"
        android:layout_gravity="fill_horizontal"
        android:layout_row="1"
        android:hint="@string/street_hint"
        android:inputType="text"
        android:lines="1"
        android:maxLength="100" />

    <TextView
        android:layout_column="0"
        android:layout_row="2"
        android:text="@string/city" />

    <EditText
        android:id="@+id/city_editText"
        android:layout_column="1"
        android:layout_gravity="fill_horizontal"
        android:layout_row="2"
        android:hint="@string/city_hint"
        android:inputType="text"
        android:lines="1"
        android:maxLength="100" />
    
    <TextView 
        android:layout_column="0"
        android:layout_row="3"
        android:text="@string/state_label_editText" />

    <Spinner
        android:id="@+id/state_spinner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_column="1"
        android:layout_columnSpan="2"
        android:layout_row="3" />

    <TextView
        android:layout_column="0"
        android:layout_row="4"
        android:text="@string/zip" />

    

    <Button
        android:id="@+id/submit_button"
        android:layout_width="match_parent"
        android:layout_column="0"
        android:layout_columnSpan="3"
        android:layout_row="6"
        android:gravity="center_horizontal|center_vertical"
        android:text="@string/submit" />

    <EditText
        android:id="@+id/zip_editText"
        android:layout_gravity="fill_horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_column="1"
        android:layout_row="4"
        android:hint="@string/zip_hint"
        android:inputType="number"
        android:maxLength="5" >

        <requestFocus />
    </EditText>

</GridLayout>